<div id="container" class="container">
    <h1>Reset Password</h1>
    <form id="resetPasswordForm" action="" method="post">
        <div class="control-input">
            <input id="input-name" class="input" name="email"  type="email" placeholder="Email address..."/>
            <p class="error-message invisible"></p>
        </div>
        <div class="control-input">
            <input id="input-name" class="input" name="oldPassword"  type="password" placeholder="Old password..."/>
            <p class="error-message invisible"></p>
        </div>
        <div class="control-input">
            <input id="input-lastname" class="input" name="newPassword"  type="password" placeholder="New password..."/>
            <p class="error-message invisible"></p>
        </div>
        <button id="btn-signup" class="btn btn-primary" type="submit">
            Confirm
            <span id="btn-loading" class="spinner-border spinner-border-sm fade" role="status" aria-hidden="true"></span>
        </button>
    </form>
</div>
