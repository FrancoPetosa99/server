<h2 class="page-title">Products</h2>
<div class="container-cards-products">
    {{#each pagination.products}}
        <div class="product-card">
            <div class="product-image">
                <img src="/images/gato.jpg" alt='Img producto'>
            </div>
            <div class="product-info">
                <h2 class="product-name">{{this.title}}</h2>
                <p class="product-description">{{this.description}}</p>
                <div class="product-price">
                    <span class="price">${{this.price}}</span>
                    <button class="add-to-cart">Agregar al carrito</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="pagination">
    {{#if pagination.prevPage}}
        <a href={{pagination.prevPageLink}} class="prev">&laquo; Anterior</a>
    {{else}}
        <a class="prev disabled">&laquo; Anterior</a>
    {{/if}}
    <a href="#" class="page active">{{pagination.currentPage}}</a> 
    {{#if pagination.nextPage}}
        <a href={{pagination.nextPageLink}} class="next">Siguiente &raquo;</a>
    {{else}}
        <a class="next disabled">Siguiente &raquo;</a>
    {{/if}}
</div>
