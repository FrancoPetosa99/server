<div id="container" class="container">
    <h1>Logging</h1>
    <div class="control-input">
        <input id="input-email" class="input" name="email"  type="email" placeholder="Email..."/>
        <p class="error-message invisible"></p>
    </div>
    <div class="control-input">
        <input id="input-password" class="input" name="password"  type="password" placeholder="password"/>
        <p class="error-message invisible"></p>
    </div>
    <button id="btn-loggin" class="btn btn-primary" type="button">
        Log in
        <span id="btn-loading" class="spinner-border spinner-border-sm fade" role="status" aria-hidden="true"></span>
    </button>
    <div class="links-controller">
        <p class="link-text">Don't remember your password? <a href="#reset-password">Reset password</a></p>
        <p class="link-text">Don't have an account? <a href="http://localhost:8080/api/views/signup">Sign up</a></p>
    </div>
</div>
